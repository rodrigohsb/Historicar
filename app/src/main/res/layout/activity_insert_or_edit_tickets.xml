<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize">

        <TextView
            android:id="@+id/insertOrEditTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Edição:"
            android:textColor="@color/actionbar_background"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/insertOrEditPlacaDescriptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/insertOrEditTitle"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/actionbar_background"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/insertOrEditPlacaDescriptionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Ex: Meu Carro"
                android:maxLength="10"
                android:maxLines="1"
                android:nextFocusDown="@+id/insertOrEditPlacaLetras"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/insertOrEditRadioButonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/insertOrEditPlacaDescriptionLayout"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/insertOrEditRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/insertOrEditCarRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_car"
                    android:drawableRight="@drawable/ic_car"/>

                <RadioButton
                    android:id="@+id/insertOrEditMotorcycleRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_marginStart="48dp"
                    android:drawableEnd="@drawable/ic_motorcycle"
                    android:drawableRight="@drawable/ic_motorcycle"/>

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/insertOrEditPlacaPlateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/insertOrEditRadioButonLayout"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/insertOrEditPlacaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/actionbar_background"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/insertOrEditPlacaTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/insertOrEditPlacaLetras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Letras"
                    android:inputType="text"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAllCaps="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="-"/>

                <EditText
                    android:id="@+id/insertOrEditPlacaNumeros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:hint="Números"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAllCaps="true"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/insertOrEditPlacaPlateLayout"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_shape_save_button"
                android:drawableLeft="@drawable/ic_check"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/ic_check"
                android:text="Salvar"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/custom_shape_delete_button"
                android:drawableLeft="@drawable/ic_trash"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/ic_trash"
                android:text="Deletar"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>