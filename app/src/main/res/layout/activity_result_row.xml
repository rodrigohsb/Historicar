<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="2sp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/result_row_bg"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            android:text="Descricao da multa"
            android:textColor="@android:color/black"
            android:textSize="16dip"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:text="Pontos : 5"
            android:textColor="@android:color/black"
            android:textSize="12dip"/>

        <TextView
            android:id="@+id/gravidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/points"
            android:text="Gravidade : Leve"
            android:textColor="@android:color/black"
            android:textSize="12dip"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gravidade"
            android:text="Data : 21/02/2015 12h56"
            android:textColor="@android:color/black"
            android:textSize="12dip"/>

        <ImageView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/gravidade"
            android:layout_marginRight="5dip"
            android:gravity="end"
            android:src="@drawable/ic_green"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginBottom="3dp"
            android:text="PreÃ§o : R$ 45,45"
            android:textColor="@android:color/black"
            android:textSize="12dip"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>