<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/detailsSectionCommonTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailsSectionCommonTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="Estacionar em local/horario proibido especificamente pela sinalizacao"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailsSectionCommonTop"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:elevation="2sp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/detailsSectionCommonMiddle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/detailsSectionCommonPointsAndGravidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/detailsSectionCommonPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05"
                            android:textColor="@android:color/black"
                            android:textSize="32sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/detailsSectionCommonPointsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Pontos"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/detailsSectionCommonGravidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_horizontal"
                        android:text="GRAVISSIMA"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:background="#000000"/>

                <!--LOCAL-->
                <LinearLayout
                    android:id="@+id/detailsSectionCommonBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailsDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Local:"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/detailsSectionCommonLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Av Mal Rondon px1811-st Maracana fx2 Sentido"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <!--INFRAÇÃO-->
                        <LinearLayout
                            android:id="@+id/detailsSectionCommonInfracaoLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Infração:"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/detailsSectionCommonInfracao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="B2/00386714"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <!--CODIGO DETRAN-->
                        <LinearLayout
                            android:id="@+id/detailsSectionCommonCodigoDetranLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cód Detran:"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/detailsSectionCommonCodigoDetran"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="B54853835"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <!--CODIGO DA INFRACAO-->
                        <LinearLayout
                            android:id="@+id/detailsSectionCommonCodInfracaoLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cód da Infração:"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/detailsSectionCommonCodInfracao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="746-3-0"

                                android:textSize="14sp"/>
                        </LinearLayout>

                        <!--TIPO-->
                        <LinearLayout
                            android:id="@+id/detailsSectionCommonTypeLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tipo:"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/detailsSectionCommonType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Penalidade"
                                android:textSize="14sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <!--DATA E HORA-->
                        <LinearLayout
                            android:id="@+id/detailsSectionCommonDateHourLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data &amp; Hora:"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/detailsSectionCommonDateHour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11/09/2015 13:53"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <!--STATUS-->
                        <LinearLayout
                            android:id="@+id/detailsSectionCommonStatusLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status:"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/detailsSectionCommonStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notificado"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/detailsSectionCommonVelocidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <!--VELOC AFERIDA-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Veloc Aferida:"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/detailsSectionCommonVelocidadeAferida"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="94 km/h"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <!--VELOC PERMITIDA-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Veloc Permitida:"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/detailsSectionCommonVelocidadeMax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80 km/h"
                                android:textSize="14sp"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>